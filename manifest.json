{
  "manifest_version": 3,
  "name": "AI ChatBot Chrome Extension",
  "version": "1.0",
  "description": "Professional AI-powered chatbot with image analysis capabilities",
  "permissions": ["activeTab", "storage", "tabs", "scripting"],
  "host_permissions": ["https://chat-bot-extension-backend.vercel.app/*","https://chat-bot-extension-backend.vercel.app/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI ChatBot"
  },
  "background": {
    "service_worker": "background.js"
  }
}
