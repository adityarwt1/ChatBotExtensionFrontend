{
  "manifest_version": 3,
  "name": "AI ChatBot Chrome Extension",
  "version": "1.0",
  "description": "Professional AI-powered chatbot with image analysis capabilities",
  "permissions": ["activeTab", "storage", "tabs", "scripting"],
  "host_permissions": ["https://chat-bot-extension-backend.vercel.app/*"],
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/js/content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "src/html/popup.html",
    "default_title": "AI ChatBot",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "background": {
    "service_worker": "src/js/background.js"
  }
}
